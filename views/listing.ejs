<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= listing.title %></h2>
      <img class="img-fluid" src="<%= listing.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/listing/likeListing/<%= listing.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= listing.likes %></h3>
        <%if(listing.user == user.id){ %>
        <form
          action="/listing/deleteListing/<%= listing.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= listing.caption %></p>
    </div>
    <div class="mt-5">
            <h2>Ask a question</h2>
            <form action="/question/createQuestion/<%=listing.id%>" method="POST">
              <div class="mb-3">
                  <label for="question" class="form-label">Question</label>
                  <input type="text" class="form-control" id="question" name="question">
              </div>
              <button type="submit" class="btn btn-primary">Ask</button>
            </form>
          </div>
    <ul>
      <% for(var i=0; i<questions.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <%= questions[i].question%>
        </li>
      <% } %>
    </ul>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>