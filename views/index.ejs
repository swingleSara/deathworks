  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container">
          <a href="/profile" class="navbar-brand"
            ><h1>Deathworks</h1>
            <h5>A Funeral Industries Job Board</h5></a
          >
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navmenu"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div id="navmenu" class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a href="/" class="nav-link">Home</a>
              </li>
              <li class="nav-item">
                <a href="/login" class="nav-link">Login</a>
              </li>
            </ul>
            <!-- Signup Modal Button -->
            <% if (!user) { %>
              <button class="btn btn-secondary btn-lg" data-bs-toggle="modal" data-bs-target="#signup">Signup</button>
            <%  } %>
            <!-- <form class="d-flex">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
              />
              <button class="btn btn-outline-secondary" type="submit">
                Search
              </button>
            </form> -->
          </div>
        </div>
      </nav>
    </header>

<!-- Feed -->
<section>
  <div class="container">
    <div class="row row-cols-3">
      <% for(let i=0; i<listings.length; i++) {%>
        <div class="col card g-2">
          <% if (!user) { %>
            <a href="/publicListing/<%= listings[i]._id%>" class="link-secondary">
          <% } else { %>
            <a href="/listing/<%=listings[i]._id%>" class="link-secondary">
          <% } %>
            <% if (!listings[i].image) { %>
              <div>
                <img class="img-fluid card-img-top" src="/imgs/default-post-pic.jpg" alt="default post pic">
              </div>
            <% } else { %>
              <div>
                <img class="img-fluid card-img-top" src="<%= listings[i].image%>">
              </div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title text-center"><%=listings[i].title%></h5>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>
</section> 

<!-- Signup Modal -->
<div class="modal fade" id="signup" tabindex="-1" aria-labelledby="signupLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signupLabel">Signup</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%- include("signup") -%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") -%>