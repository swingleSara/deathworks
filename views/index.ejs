<%- include("partials/publicHeader") -%>

    <!-- Feed -->
    <section>
      <div class="container">
        <div class="row">
          <% for(let i=0; i<listings.length; i++) {%>
            <div class="col-md card g-2">
              <% if (!user) { %>
                <a href="/publicListing/<%= listings[i]._id%>" class="link-secondary">
              <% } else { %>
                <a href="/listing/<%=listings[i]._id%>" class="link-secondary">
              <% } %>
                <% if (!listings[i].image) { %>
                  <div>
                    <img class="img-fluid card-img-top" src="/imgs/default-post-pic.jpg" alt="default post pic">
                  </div>
                <% } else { %>
                  <div>
                    <img class="img-fluid card-img-top" src="<%= listings[i].image%>">
                  </div>
                <% } %>
                <div class="card-body">
                  <h5 class="card-title text-center"><%=listings[i].title%></h5>
                </div>
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </section> 

    <!-- Signup Modal -->
    <div class="modal fade" id="signup" tabindex="-1" aria-labelledby="signupLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="signupLabel">Signup</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%- include("signup") -%>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </div>
    </div>

<%- include("partials/footer") -%>