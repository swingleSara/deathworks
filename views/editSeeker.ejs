<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
    <div class="col-6">
      <div class="mt-5">
        <h2>Edit Seeker Profile</h2>
        <form
          action="/seeker/editSeeker/<%=seeker._id%>?_method=PUT"
          method="POST"
        >
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              value="<%=seeker.name%>"
            />
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              class="form-control"
              id="location"
              name="location"
              value="<%=seeker.location%>"
            />
          </div>
          <div class="mb-3">
            <label for="quals" class="form-label">Qualifications</label>
            <textarea
              class="form-control"
              id="quals"
              name="quals"
              value="<%=seeker.quals%>"
            ></textarea>
          </div>
          <div class="mb-3">
            <label for="bioBlurb" class="form-label">About Me</label>
            <textarea
              class="form-control"
              id="bioBlurb"
              name="bioBlurb"
              value="<%=seeker.bioBlurb%>"
            ></textarea>
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image</label>
            <input
              type="file"
              class="form-control"
              id="imageUpload"
              name="file"
              value="<%=seeker.image%>"
            />
          </div>
          <button type="submit" class="btn btn-secondary" value="Upload">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') -%>
