<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Deathworks Job Board</title>
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/imgs/default-profile-pic.png"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container">
          <a href="/profile" class="navbar-brand"
            ><h1>Deathworks</h1>
            <h5>A Funeral Industries Job Board</h5></a
          >
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navmenu"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div id="navmenu" class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a href="/" class="nav-link">Home</a>
              </li>
              <li class="nav-item">
                <a href="/login" class="nav-link">Login</a>
              </li>
            </ul>
            <!-- Signup Modal Button -->
            <% if (!employer || !seeker) { %>
            <button
              class="btn btn-secondary btn-lg"
              data-bs-toggle="modal"
              data-bs-target="#signup"
            >
              Signup
            </button>
            <% } %>
            <!-- <form class="d-flex">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
              />
              <button class="btn btn-outline-secondary" type="submit">
                Search
              </button>
            </form> -->
          </div>
        </div>
      </nav>
    </header>
    <div class="container">
      <div class="row mt-5">
        <div class="col-6">
          <div>
            <!-- Employer -->
            <% if (employer) { %>
              <% if (employer.image) { %>
                <img class="img-fluid" src="<%= employer.image %>" />
              <% } else { %>
                <img class="img-fluid" src="/imgs/default-profile-pic.jpg" alt="default profile pic"/>
              <% } %>
              <p>Name: <%= employer.name %></p>
              <p>Company: <%= employer.companyName %></p>
              <p>Location: <%= employer.city %>, <%= employer.state %></p>
              <p>About The Company: <%= employer.bioBlurb %></p>
              <p>Recent Listings: <% if (!listings) { %>
                No recent listings. </p>
              <% } else { %>              
                <div class="container">
                  <div class="row row-cols-3">
                    <% for(let i=0; i<(listings.length < 6 ? listings.length : 6); i++) {%>
                      <div class="col card g-2">
                        <a href="/publicListing/<%= listings[i]._id%>" class="link-secondary">
                          <% if (!listings[i].image) { %>
                            <div>
                              <img class="img-fluid card-img-top" src="/imgs/default-post-pic.jpg" alt="default post pic">
                            </div>
                          <% } else { %>
                            <div>
                              <img class="img-fluid card-img-top" src="<%= listings[i].image%>">
                            </div>
                           <% } %>
                          <div class="card-body">
                            <h5 class="card-title text-center"><%=listings[i].title%></h5>
                          </div>
                        </a>
                      </div>
                    <% } %>
                  </div>
                </div>
              <% } %>
            <% } %>
            <!-- Seeker -->
            <% if (seeker) { %>
              <% if (seeker.image) { %>
                <img class="img-fluid" src="<%= seeker.image %>" />
              <% } else { %>
                <img class="img-fluid" src="/imgs/default-profile-pic.jpg" alt="default profile pic"/>
              <% } %>
              <p>Name: <%= seeker.name %></p>
              <p>Location: <%= seeker.city %>, <%= seeker.state %></p>
              <p>Qualificiations: <%= seeker.quals %></p>
              <p>About Me: <%= seeker.bioBlurb %></p>
              <p>Recent Questions: <% if (!questions) { %>
                No recent questions. </p>
              <% } else { %>              
                <section id="questions" class="p-5">
                  <div class="container">
                    <div class="accordion accordion-flush" id="questions">
                      <% for(let i=0; i<(questions.length < 6 ? questions.length : 6); i++) {%>
                        <div class="accordion-item">
                          <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#question-<%=i%>">
                              <div><%=questions[i].question%></div>
                            </button>
                          </h2>
                          <div id="question-<%=i%>" class="accordion-collapse collapse" data-bs-parent="#questions">
                            <div class="accordion-body">
                              <div>
                                Asked on: <a href="/publicListing/<%= questions[i].listing%>" class="link-secondary">
                                  <%=allListings.filter((elem,ind,arr) => elem._id == `${questions[i].listing}`)[0].title%>
                                </a>
                              </div>
                              <%if (questions[i].answer != undefined){ %>
                                <%=questions[i].answer%>
                              <%} else {%>
                                This question has not been answered yet.
                              <% } %>
                            </div>
                          </div>
                        </div>
                      <% } %>
                    </div>
                  </div>
                </section>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Signup Modal -->
<div class="modal fade" id="signup" tabindex="-1" aria-labelledby="signupLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signupLabel">Signup</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%- include("signup") -%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer") -%>
